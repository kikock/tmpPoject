<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.jeecg.modules.rule.mapper.UserProfilesMapper">
    <!-- 定义 LessonRule 的结果映射，将数据库列名与实体属性名进行显式映射 -->
    <resultMap id="BaseResultMap" type="org.jeecg.modules.rule.entity.LessonRule">
        <id column="id" jdbcType="VARCHAR" property="id"/>
        <result column="mts_specialty" jdbcType="VARCHAR" property="mtsSpecialty"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="code" jdbcType="VARCHAR" property="code"/>
        <result column="main_category" jdbcType="VARCHAR" property="mainCategory"/>
        <result column="type" jdbcType="VARCHAR" property="type"/>
        <result column="lesson_ids" jdbcType="VARCHAR" property="lessonIds"/>
        <result column="unit" jdbcType="VARCHAR" property="unit"/>
        <result column="profile_count" jdbcType="INTEGER" property="profileCount"/>
        <result column="plateau_count" jdbcType="INTEGER" property="plateauCount"/>
        <result column="last_update_time" jdbcType="TIMESTAMP" property="lastUpdateTime"/>
    </resultMap>
    <sql id="lessonList">
        SELECT id,
               mts_specialty,
               name,
               code,
               main_category,
               type,
               lesson_ids,
               unit,
               profile_count,
               plateau_count,
               last_update_time
        FROM v_lesson_rule
    </sql>


    <select id="pageLessonRuleList" resultMap="BaseResultMap">
        <include refid="lessonList"/>
        ${ew.customSqlSegment}
    </select>

    <select id="getByLessonId" resultMap="BaseResultMap">
        <include refid="lessonList"/>
        WHERE id = #{id}
    </select>

    <select id="getByLessonCode" resultMap="BaseResultMap">
        <include refid="lessonList"/>
        WHERE code = #{code}
    </select>
</mapper>